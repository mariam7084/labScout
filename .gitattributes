# Force all text files to use LF in the repo
* text=auto eol=lf

# Handle common file types explicitly
*.js   text eol=lf
*.jsx  text eol=lf
*.ts   text eol=lf
*.tsx  text eol=lf
*.css  text eol=lf
*.html text eol=lf
*.json text eol=lf
*.md   text eol=lf
*.yml  text eol=lf
*.yaml text eol=lf

# Windows-only files can stay CRLF if really needed
*.bat  text eol=crlf
*.cmd  text eol=crlf
